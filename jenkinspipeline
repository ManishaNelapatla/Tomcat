pipeline {
    agent any

    stages {
        stage('Clean') {
            steps {
                echo 'Cleaning project...'
                bat 'mvn clean'
            }
        }

        stage('Package') {
            steps {
                echo 'Packaging project...'
                bat 'mvn package'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                bat 'mvn test'
            }
        }

        stage('Build') {
            steps {
                echo 'Building project...'
                bat 'mvn compile'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying to Tomcat...'
                bat 'mvn tomcat7:deploy'
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
